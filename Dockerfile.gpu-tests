# GPU Test Container for Cloud Run Jobs
# Uses NVIDIA L4 GPU with CUDA 12.2
#
# Layer ordering optimized for caching:
# 1. Base image + system packages (rarely changes)
# 2. Python dependencies (changes occasionally)
# 3. Source code (changes frequently)

FROM nvidia/cuda:12.2.0-runtime-ubuntu22.04

# Install Python 3.11 and system dependencies
RUN apt-get update && apt-get install -y \
    python3.11 \
    python3.11-venv \
    python3.11-dev \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Set Python 3.11 as default
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.11 1 \
    && update-alternatives --install /usr/bin/python python /usr/bin/python3.11 1

# Upgrade pip (cached layer)
RUN python -m pip install --upgrade pip

# Install Python dependencies BEFORE copying source code
# This layer is cached unless requirements change
# Use jax[cuda12] which bundles CUDA/cuDNN dependencies via pip wheels
# This is the JAX-recommended approach for easier CUDA support
RUN pip install --no-cache-dir \
    "jax[cuda12]" \
    numpy \
    scipy \
    lark \
    matplotlib \
    pytest

# Verify installed packages
RUN pip list | grep -i jax && \
    python -c "import jax; print('JAX devices:', jax.devices())" || echo "JAX device check failed (expected at build time)"

# Create working directory
WORKDIR /app

# Copy only pyproject.toml first (for package metadata)
COPY pyproject.toml /app/

# Copy source code (this layer changes frequently)
COPY jax_spice /app/jax_spice/
COPY tests /app/tests/

# Install jax-spice without dependencies (already installed above)
RUN pip install -e . --no-deps

# Set environment variables
ENV JAX_ENABLE_X64=1
# Enable both CUDA and CPU platforms so we can measure CPU<->GPU transfers
ENV JAX_PLATFORMS=cuda,cpu
ENV NVIDIA_VISIBLE_DEVICES=all
ENV NVIDIA_DRIVER_CAPABILITIES=compute,utility
# Cloud Run provides NVIDIA driver libs at /usr/local/nvidia/lib64
# Ensure this path is in LD_LIBRARY_PATH for JAX/XLA to find the driver
ENV LD_LIBRARY_PATH=/usr/local/nvidia/lib64:/usr/local/cuda/lib64:${LD_LIBRARY_PATH}
# Enable verbose CUDA logging for debugging
ENV TF_CPP_MIN_LOG_LEVEL=0

# Entrypoint runs tests
ENTRYPOINT ["python", "-m", "pytest"]
CMD ["tests/test_gpu_benchmarks.py", "-v", "-s", "--tb=short"]
